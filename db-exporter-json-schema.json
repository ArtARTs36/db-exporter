{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "databases": {
      "description": "Map of databases",
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/database"
      }
    },
    "tasks": {
      "description": "Map of tasks",
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/task"
      }
    },
    "options": {
      "type": "object",
      "properties": {
        "with_migrations_table": {
          "type": "boolean",
          "default": false
        },
        "print_stat": {
          "type": "boolean",
          "default": false
        },
        "debug": {
          "type": "boolean",
          "default": false
        }
      },
      "additionalProperties": false
    }
  },
  "definitions": {
    "database": {
      "type": "object",
      "properties": {
        "driver": {
          "type": "string",
          "enum": ["postgres", "dbml", "mysql"],
          "title": "Database driver"
        },
        "dsn": {
          "type": "string",
          "title": "Data Source Name in GO syntax, allow env vars. Golang format: 'port=5459 user=db password=db dbname=db sslmode=disable'"
        },
        "schema": {
          "type": "string",
          "title": "Database schema",
          "default": "public"
        }
      },
      "required": [
        "driver",
        "dsn"
      ],
      "additionalProperties": false
    },
    "task": {
      "type": "object",
      "properties": {
        "activities": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/task_activity",
            "minLength": 1
          }
        },
        "commit": {
          "$ref": "#/definitions/task_commit"
        }
      },
      "required": [
        "activities"
      ],
      "additionalProperties": false
    },
    "task_commit": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "push": {
          "type": "boolean",
          "default": false
        }
      },
      "additionalProperties": false
    },
    "task_activity": {
      "type": "object",
      "properties": {
        "format": {
          "type": "string",
          "enum": [
            "md", "diagram", "go-entities", "goose", "goose-fixtures", "go-sql-migrate",
            "laravel-migrations-raw", "laravel-models", "grpc-crud", "csv",
            "go-entity-repository", "json-schema", "graphql", "dbml", "custom", "ddl"
          ]
        },
        "database": {
          "type": "string",
          "description": "Database name as shown on the database map"
        },
        "table_per_file": {
          "type": "boolean",
          "default": false
        },
        "skip_exists": {
          "type": "boolean",
          "default": false,
          "description": "Skip generate already exists files"
        },
        "tables": {
          "type": "object",
          "oneOf": [
            {
              "properties": {
                "list": {
                  "oneOf": [
                    {
                      "type": "array",
                      "description": "Tables list for export",
                      "items": {
                        "type": "string"
                      }
                    },
                    {
                      "type": "string",
                      "description": "Environment expression for tables list or one table name"
                    }
                  ]
                }
              },
              "required": [
                "list"
              ],
              "additionalProperties": false
            },
            {
              "properties": {
                "prefix": {
                  "type": "string",
                  "description": "Table prefix for export"
                }
              },
              "required": [
                "prefix"
              ],
              "additionalProperties": false
            }
          ]
        },
        "out": {
          "type": "object",
          "properties": {
            "dir": {
              "type": "string"
            },
            "file_prefix": {
              "type": "string",
              "default": ""
            }
          },
          "required": ["dir"],
          "additionalProperties": false
        }
      },
      "allOf": [
        {
          "$ref": "#/$export-specs/discriminator"
        }
      ],
      "required": ["format", "out"],
      "additionalProperties": false
    }
  },
  "$export-specs": {
    "discriminator": {
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "format": {
              "const": "diagram"
            }
          }
        },
        {
          "properties": {
            "format": {
              "const": "dbml"
            }
          }
        },
        {
          "properties": {
            "format": {
              "const": "graphql"
            }
          }
        },
        {
          "properties": {
            "format": {
              "const": "md"
            },
            "spec": {
              "$ref": "#/$export-specs/md"
            }
          }
        },
        {
          "properties": {
            "format": {
              "const": "go-entities"
            },
            "spec": {
              "$ref": "#/$export-specs/go_entities"
            }
          }
        },
        {
          "properties": {
            "format": {
              "const": "grpc-crud"
            },
            "spec": {
              "$ref": "#/$export-specs/grpc_crud"
            }
          }
        },
        {
          "properties": {
            "format": {
              "const": "csv"
            },
            "spec": {
              "$ref": "#/$export-specs/csv"
            }
          }
        },
        {
          "properties": {
            "format": {
              "const": "laravel-models"
            },
            "spec": {
              "$ref": "#/$export-specs/laravel_models"
            }
          }
        },
        {
          "properties": {
            "format": {
              "const": "go-entity-repository"
            },
            "spec": {
              "$ref": "#/$export-specs/go_entity_repository"
            }
          }
        },
        {
          "properties": {
            "format": {
              "const": "json-schema"
            },
            "spec": {
              "$ref": "#/$export-specs/json_schema"
            }
          }
        },
        {
          "properties": {
            "format": {
              "const": "go-sql-migrate"
            },
            "spec": {
              "$ref": "#/$export-specs/migrations"
            }
          }
        },
        {
          "properties": {
            "format": {
              "const": "laravel-migrations-raw"
            },
            "spec": {
              "$ref": "#/$export-specs/migrations"
            }
          }
        },
        {
          "properties": {
            "format": {
              "const": "goose"
            },
            "spec": {
              "$ref": "#/$export-specs/migrations"
            }
          }
        },
        {
          "properties": {
            "format": {
              "const": "ddl"
            },
            "spec": {
              "$ref": "#/$export-specs/migrations"
            }
          }
        },
        {
          "properties": {
            "format": {
              "const": "go-sql-migrations"
            },
            "spec": {
              "$ref": "#/$export-specs/migrations"
            }
          }
        },
        {
          "properties": {
            "format": {
              "const": "custom"
            },
            "spec": {
              "$ref": "#/$export-specs/custom"
            }
          }
        },
        {
          "properties": {
            "format": {
              "const": "diagram"
            },
            "spec": {
              "$ref": "#/$export-specs/diagram"
            }
          }
        }
      ]
    },
    "diagram": {
      "type": "object",
      "properties": {
        "style": {
          "type": "object",
          "properties": {
            "background": {
              "type": "object",
              "properties": {
                "color": {
                  "type": "string"
                }
              }
            },
            "font": {
              "type": "object",
              "properties": {
                "family": {
                  "type": "string",
                  "default": "Times-Roman"
                }
              }
            },
            "table": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "object",
                  "properties": {
                    "background_color": {
                      "type": "string",
                      "title": "Background color for table name",
                      "default": "#3498db"
                    },
                    "text_color": {
                      "type": "string",
                      "title": "Text color for table name"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "additionalProperties": false
    },
    "go_entities": {
      "type": "object",
      "properties": {
        "go_module": {
          "type": "string",
          "default": "current go module"
        },
        "package": {
          "type": "string",
          "default": "entities"
        }
      },
      "additionalProperties": false
    },
    "grpc_crud": {
      "type": "object",
      "properties": {
        "package": {
          "type": "string"
        },
        "options": {
          "type": "object",
          "properties": {
            "java_package": {
              "type": "string"
            },
            "java_outer_classname": {
              "type": "string"
            },
            "java_multiple_files": {
              "type": "boolean"
            },
            "java_string_check_utf8": {
              "type": "boolean"
            },
            "optimize_for": {
              "type": "string",
              "enum": [
                "SPEED",
                "CODE_SIZE",
                "LITE_RUNTIME"
              ]
            },
            "go_package": {
              "type": "string"
            },
            "cc_generic_services": {
              "type": "boolean"
            },
            "java_generic_services": {
              "type": "boolean"
            },
            "py_generic_services": {
              "type": "boolean"
            },
            "php_generic_services": {
              "type": "boolean"
            },
            "deprecated": {
              "type": "boolean"
            },
            "cc_enable_arenas": {
              "type": "boolean"
            },
            "objc_class_prefix": {
              "type": "boolean"
            },
            "csharp_namespace": {
              "type": "boolean"
            },
            "swift_prefix": {
              "type": "boolean"
            },
            "php_class_prefix": {
              "type": "boolean"
            },
            "php_namespace": {
              "type": "boolean"
            },
            "php_metadata_namespace": {
              "type": "boolean"
            },
            "ruby_package": {
              "type": "boolean"
            }
          },
          "additionalProperties": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "boolean"
              },
              {
                "type": "integer"
              }
            ]
          }
        }
      },
      "additionalProperties": false
    },
    "csv": {
      "type": "object",
      "properties": {
        "delimiter": {
          "type": "string",
          "default": ","
        },
        "transform": {
          "type": "object",
          "description": "transform per table",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "object",
              "oneOf": [
                {
                  "type": "object",
                  "properties": {
                    "only_columns": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  },
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "properties": {
                    "skip_columns": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  },
                  "additionalProperties": false
                },
                {
                  "type": "object",
                  "properties": {
                    "rename_columns": {
                      "type": "object",
                      "additionalProperties": {
                        "type": "string"
                      }
                    }
                  },
                  "additionalProperties": false
                }
              ]
            }
          }
        }
      },
      "additionalProperties": false
    },
    "laravel_models": {
      "type": "object",
      "properties": {
        "namespace": {
          "type": "string",
          "default": "App\\Models"
        },
        "time_as": {
          "type": "string",
          "enum": ["carbon","datetime"],
          "default": "carbon"
        }
      },
      "additionalProperties": false
    },
    "go_entity_repository": {
      "type": "object",
      "properties": {
        "go_module": {
          "type": "string"
        },
        "entities": {
          "type": "object",
          "properties": {
            "package": {
              "type": "string",
              "default": "entities",
              "description": "Package for entities. Example: domain.entities"
            }
          },
          "additionalProperties": false
        },
        "repositories": {
          "type": "object",
          "properties": {
            "package": {
              "type": "string",
              "default": "repositories",
              "description": "Package for entities. Example: infrastructure.repositories"
            },
            "container": {
              "type": "object",
              "properties": {
                "struct_name": {
                  "type": "string",
                  "default": null,
                  "description": "Name of go structure"
                }
              },
              "additionalProperties": false
            },
            "interfaces": {
              "type": "object",
              "properties": {
                "place": {
                  "type": "string",
                  "enum": ["", "entity", "with_entity", "with_repository"],
                  "default": ""
                },
                "with_mocks": {
                  "type": "boolean",
                  "default": false
                }
              }
            }
          },
          "additionalProperties": false
        },
        "filters": {
          "type": "object",
          "properties": {
            "place": {
              "type": "string",
              "enum": ["entities", "repositories"]
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "json_schema": {
      "type": "object",
      "properties": {
        "pretty": {
          "type": "boolean",
          "default": false,
          "description": "Print JSON Schema in pretty format"
        },
        "schema": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string"
            },
            "description": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "md": {
      "type": "object",
      "properties": {
        "with_diagram": {
          "type": "boolean",
          "default": false
        },
        "diagram": {
          "$ref": "#/$export-specs/diagram"
        }
      },
      "additionalProperties": false
    },
    "migrations": {
      "type": "object",
      "properties": {
        "use": {
          "type": "object",
          "properties": {
            "if_not_exists": {
              "type": "boolean",
              "default": false,
              "description": "Use 'if not exists' for create table"
            },
            "if_exists": {
              "type": "boolean",
              "default": false,
              "description": "Use 'if exists' for drop table"
            }
          },
          "additionalProperties": false
        },
        "target": {
          "type": "string",
          "enum": ["postgres", "mysql"],
          "default": "postgres"
        }
      },
      "additionalProperties": false
    },
    "custom": {
      "type": "object",
      "required": ["template"],
      "properties": {
        "template": {
          "type": "string",
          "description": "Template or path to template starts with `@local/`"
        },
        "output": {
          "type": "object",
          "properties": {
            "extension": {
              "type": "string",
              "description": "file extension",
              "default": ""
            }
          }
        }
      },
      "additionalProperties": false
    }
  }
}
